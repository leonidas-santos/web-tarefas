@model IEnumerable<web_tarefas.ViewModels.TarefaViewModel>

@{
    ViewData["Title"] = "Gerenciador de Tarefas";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-tasks"></i> Minhas Tarefas</h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nova Tarefa
            </a>
        </div>

        @if (TempData["Sucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Sucesso"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (Model.Any())
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card border-@item.StatusCor">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <small class="text-muted">
                                    @item.DataCriacao
                                </small>
                                <span class="badge bg-@item.PrioridadeCor">
                                    @item.PrioridadeTexto
                                </span>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title @(item.Concluida ? "text-decoration-line-through text-muted" : "")">
                                    @item.Titulo
                                </h5>
                                @if (item.TemDescricao)
                                {
                                    <p class="card-text @(item.Concluida ? "text-muted" : "")">
                                        @item.Descricao
                                    </p>
                                }
                                @if (item.Concluida && !string.IsNullOrEmpty(item.DataConclusao))
                                {
                                    <small class="text-success">
                                        <i class="fas fa-check-circle"></i> Concluída em @item.DataConclusao
                                    </small>
                                }
                                <div class="mt-2">
                                    <span class="badge bg-@item.StatusCor">@item.StatusTexto</span>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalhes">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="ToggleConcluida" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-@(item.Concluida ? "secondary" : "success") btn-sm"
                                                title="@(item.Concluida ? "Marcar como pendente" : "Marcar como concluída")">
                                            <i class="fas fa-@(item.Concluida ? "undo" : "check")"></i>
                                        </button>
                                    </form>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Excluir">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Nenhuma tarefa cadastrada</h4>
                <p class="text-muted">Comece criando sua primeira tarefa!</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Criar Primeira Tarefa
                </a>
            </div>
        }
    </div>
</div>