@model web_tarefas.ViewModels.TarefaViewModel

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4><i class="fas fa-eye"></i> Detalhes da Tarefa</h4>
                <span class="badge bg-@Model.PrioridadeCor fs-6">@Model.PrioridadeTexto</span>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-8">
                        <h2 class="@(Model.Concluida ? "text-decoration-line-through text-muted" : "")">
                            @Model.Titulo
                        </h2>
                    </div>
                    <div class="col-md-4 text-end">
                        <span class="badge bg-@Model.StatusCor fs-6">
                            <i class="fas fa-@(Model.Concluida ? "check-circle" : "clock")"></i>
                            @Model.StatusTexto
                        </span>
                    </div>
                </div>

                @if (Model.TemDescricao)
                {
                    <div class="mb-4">
                        <h5>Descrição:</h5>
                        <p class="@(Model.Concluida ? "text-muted" : "")">@Model.Descricao</p>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <i class="fas fa-calendar-plus fa-2x text-primary mb-2"></i>
                                <h6>Data de Criação</h6>
                                <p class="mb-0">@Model.DataCriacao</p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.DataConclusao))
                    {
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-check fa-2x text-success mb-2"></i>
                                    <h6>Data de Conclusão</h6>
                                    <p class="mb-0">@Model.DataConclusao</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                @if (Model.Concluida)
                {
                    <div class="alert alert-success mt-4">
                        <i class="fas fa-check-circle"></i>
                        <strong>Parabéns!</strong> Esta tarefa foi concluída com sucesso.
                    </div>
                }
            </div>

            <div class="card-footer">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary me-md-2">
                        <i class="fas fa-arrow-left"></i> Voltar para Lista
                    </a>

                    @if (!Model.Concluida)
                    {
                        <form asp-action="ToggleConcluida" asp-route-id="@Model.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-success me-md-2">
                                <i class="fas fa-check"></i> Marcar como Concluída
                            </button>
                        </form>
                    }

                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-md-2">
                        <i class="fas fa-edit"></i> Editar
                    </a>

                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Excluir
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>